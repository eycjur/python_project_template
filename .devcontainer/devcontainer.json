{
  "name": "Existing Docker Compose (Extend)",
  "dockerComposeFile": [
    "../docker-compose.yml",
    "./docker-compose.override.yml"
  ],
  "service": "app",
  "workspaceFolder": "/app",
  "shutdownAction": "stopCompose",
  "overrideCommand": true,
  "customizations": {
    "vscode": {
      "settings": {
        "python.pythonPath": "/usr/local/bin/python",
        "python.linting.pylintEnabled": false,
        "python.linting.flake8Enabled": false,
        // ruffの自動フォーマット
        "[python]": {
          "editor.defaultFormatter": "charliermarsh.ruff",
          "editor.formatOnSave": true
        },
        "autoDocstring.docstringFormat": "google",
        "python.testing.pytestArgs": [
          "tests",
          "-vv", // 詳細結果の出力
          "-s" // print文の出力
        ],
        "python.testing.unittestEnabled": false,
        "python.testing.pytestEnabled": true,
        // コードセルの解析時にシェル割り当て(#!)、行マジック(#!%)およびセルマジック(#!%%)のコメントを解除します。
        "jupyter.interactiveWindow.textEditor.magicCommandsAsComments": true,
        // デバッグするときにライブラリコードにステップインできるようにする。
        "jupyter.debugJustMyCode": false,
        "launch": {
          "version": "0.2.0",
          // CLI用のargsの入力
          // "inputs": [
          //   {
          //     "type": "promptString",
          //     "id": "prompt",
          //     "description": "引数を入力してください",
          //     "default": "デフォルト"
          //   }
          // ],
          "configurations": [
            {
              "name": "Dash: サーバーを起動",
              "type": "debugpy",
              "request": "launch",
              "module": "src.presentation.dash.index",
              "cwd": "${workspaceFolder}",
              "console": "internalConsole",
              "justMyCode": false
            },
            {
              "name": "CLI: コマンドを実行",
              "type": "debugpy",
              "request": "launch",
              "module": "src.presentation.cli.app",
              "cwd": "${workspaceFolder}",
              "console": "internalConsole",
              "args": [
                "--help"
                // "${input:prompt}"
              ],
              "justMyCode": false
            },
            {
              "name": "FastAPI: サーバーを起動",
              "type": "debugpy",
              "request": "launch",
              "module": "src.presentation.fastapi.app",
              "cwd": "${workspaceFolder}",
              "console": "internalConsole",
              "justMyCode": false
            },
            {
              "name": "Flask: サーバーを起動",
              "type": "debugpy",
              "request": "launch",
              "module": "src.presentation.flask.app",
              "cwd": "${workspaceFolder}",
              "console": "internalConsole",
              "justMyCode": false
            },
            {
              "name": "Streamlit: サーバーを起動",
              "type": "debugpy",
              "request": "launch",
              "module": "streamlit",
              "cwd": "${workspaceFolder}",
              "console": "internalConsole",
              "args": [
                "run",
                "src/presentation/streamlit/home.py",
                "--server.port",
                // HACK: 公式のエスケープ方法がないので、${env:DUMMY}が""に置き換わることを利用して${env:PORT}をエスケープする
                "$${env:DUMMY}{env:PORT}",
                "--browser.gatherUsageStats",
                "false"
              ],
              "justMyCode": false
            },
            {
              "name": "Python: Current File",
              "type": "debugpy",
              "request": "launch",
              "program": "${file}",
              "console": "internalConsole",
              "justMyCode": false
            },
            {
              "name": "Python: Debug Test",
              "type": "debugpy",
              "request": "launch",
              "purpose": ["debug-test"],
              "console": "internalConsole",
              "justMyCode": false
            }
          ]
        }
      },
      "extensions": [
        // 開発支援
        "ceintl.vscode-language-pack-ja",
        "github.copilot",
        "usernamehw.errorlens",
        "gruntfuggly.todo-tree",
        "ibm.output-colorizer",
        "editorconfig.editorconfig",
        "mosapride.zenkaku",
        "ionutvmi.path-autocomplete",
        // python関連
        "ms-python.python",
        "charliermarsh.ruff",
        "ms-python.mypy-type-checker",
        "njpwerner.autodocstring",
        "ms-toolsai.jupyter",
        "ms-toolsai.jupyter-keymap",
        // Markdown関連
        "yzane.markdown-pdf",
        // CSV関連
        "janisdd.vscode-edit-csv",
        // Git関連
        "mhutchie.git-graph"
      ]
    }
  }
}
